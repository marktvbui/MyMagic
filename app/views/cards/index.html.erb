<center>Here's a list of Magic cards</center>

<center>
  <%= form_tag "/cards_search/", method: :get do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= submit_tag %>
  <% end %>
</center>

<% @cards.each do |card| %>
  <div>
  <h5>Card Name: <%= card["name"] %></h5>
  <img src="<%= card["editions"][0]["image_url"] %>">
  <%= link_to "Add to Collection", "/collection_cards/new", method: :post %>
  </div>
<% end %>

