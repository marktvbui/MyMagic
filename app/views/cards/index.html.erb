<center>Here's a list of Magic cards</center>

<center>
  <%= form_tag "/cards_search/", method: :get do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= submit_tag "Search" %>
  <% end %>
</center>

<% @cards.each do |card| %>
  <div>
  <h5>Card Name: <%= card.name %></h5>
  <img src="<%= card.image_url %>">
  <%= form_tag "/collection_cards", method: :post do %>
    <%= hidden_field_tag :card_id, card.id %>
    Quantity: <%= number_field_tag :quantity %>
    <%= submit_tag "Add to Collection" %>
  <% end %>
  <%= form_tag "/deck_cards", method: :post do %>
    <%= hidden_field_tag :card_id, card.id %>
    Quantity: <%= number_field_tag :quantity %>
    <%= collection_select :deck_id, :id, :name, Deck.where(user_id: current_user.id) %>
    <%= submit_tag "Add to Deck" %>
  <% end %>
  </div>
<% end %>

