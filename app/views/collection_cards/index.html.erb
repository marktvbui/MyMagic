<h1>Personal Collection</h1>

<center>
<%= form_tag "/search_collection", method: :post do %>
<%= label_tag :search %>
<%= text_field_tag :search %>
<%= submit_tag "Search" %>
<% end %>
</center>

<%= link_to "Sort by Name", "collection_cards?sort=card_id" %><br>

<center>
<%= link_to "Add Card to Collection", "collection_cards/new" %>
</center>

<% @collections.each do |collection| %>

  <div class="col-md-4">
    <div class="well">
      <div class="collection"><%= collection.card_id %></div>
      <img src="<%= collection["image_url"] %>">
      Quantity: <%= collection.quantity %>

    </div>
  </div>

<% end %>
